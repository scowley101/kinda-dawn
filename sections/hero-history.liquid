{% style %}
    .hero {
      align-items: center;
      display: flex;
      flex-direction: column;
      /* max-width: 68rem; */
      /* position: relative; */
      width: 100vw;
    }
  
    .hero__media {
      align-items: center;
      display: flex;
      flex-direction: column;
      justify-content: flex-end;
      /* left: 0; */
      /* position: absolute; */
      /* top: 0; */
      width: 100%;
    }
  
    .hero,
    .hero__media {
      min-height: 60rem;
      max-width: 1408px;
  
    }
  
    .hero__sticker {
      background: red;
      border-radius: 100%;
      height: 50rem;
      width: 50rem;
      padding: 0;
      position: absolute;
      top: 10rem;
      z-index: 2;
    }
  
    .hero__content {
      align-items: center;
      /* justify-content: center; */
      display: flex;
      height: fit-content;
      text-align: center;
      height: 100%;
      width: 100%;
      word-wrap: break-word;
      z-index: 1;
  
    }
  {% endstyle %}
  
  <div class="hero">
    <div class="hero__media">
      {% render 'pattern-16x4' %}
    </div>
    <div class="hero__sticker">
      <div class="hero__content">
        <h1 class="hero__tagline">
          Fringilla erat amet risus erat cursus bibendum
        </h1>
      </div>
    </div>
  </div>
  
  
  {% schema %}
    {
      "name": "Hero Section",
      "tag": "section",
      "class": "hero",
      "settings": [
        {
          "type": "text",
          "id": "tagline",
          "label": "Tagline"
        },
        {
          "type": "text",
          "id": "button_text",
          "label": "Button text"
        },
        {
          "type": "url",
          "id": "button_link",
          "label": "Button link"
        }
      ],
      "blocks": [
        {
          "name": "Images",
          "type": "images",
          "settings": [
            {
              "type": "image_picker",
              "id": "image",
              "label": "Image"
            }
          ]
        }
      ],
      "presets": [
        {
          "name": "Hero Section"
        }
      ]
    }
  {% endschema %}
  