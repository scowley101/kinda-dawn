  } */

  .hero,
  .hero__media {
    /* height: 58vh; */
    height: 38rem;
    /* min-height: 400px; */
  }


  /* .hero__media {
    display: flex;
    flex-direction: column;
    justify-content: flex-end;
    position: relative;
    height: 0;
    width: 100%;
    padding: 0 0 100%;

  }

  .hero__media svg {
    position: absolute;
