  .hero__media {
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: flex-end;
    position: relative;
    overflow: hidden;
  }


  .hero_background {
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: flex-end;
    height: 62%;
    position: absolute;

  }

  .hero_background svg {
    height: 100%;
  }

  .hero__sticker {
    background: rgb(var(--color-background));
    border-radius: 100%;
    /* height: 130%; */
    height: 50rem;
    /* max-height: 580px; */
    aspect-ratio: 1 / 1;
    padding: 0;
    position: absolute;
    /* top: -35%; */
    bottom: 2rem;
    z-index: 2;
  }

  /* .hero__sticker .semi {
    z-index: 3;
    padding: 0;
    position: absolute;
    top: 50%;

    height: 50%;
    width: 50%;
  } */

  @media screen and (max-width: 749px) {
    .hero__sticker {
      height: 108%;
      top: -20%;
    }
  }

  @media screen and (max-width: 475px) {
    .hero__sticker {
      width: 100vw;
      height: auto;
      aspect-ratio: 1 / 1;
      bottom: 6rem;
      top: auto;
    }
  }

  .hero__content {
    /* position: absolute;
    top: 6%; */
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    border-radius: 100%;
    padding: 1.6rem;
    height: 100%;
    width: 100%;
    word-wrap: break-word;
    z-index: 1;

  }

  .hero__content h1 {
    width: 100%;
    text-align: center;

  }

  @media screen and (max-width: 749px) {
    .hero__content {
      padding: 4rem;
    }
  }

  @media screen and (max-width: 475px) {
    .hero__content h1 {

      font-size: calc(var(--font-heading-scale) * 2.4rem);

    }

    .hero__content {
      /* height: calc(100vw + 1rem); */
      /* top: auto; */
      /* bottom: 1rem; */
      /* padding: 1rem; */
      position: absolute;
      bottom: -2rem;
    }
  }
{% endstyle %}

<div class="hero">
  <div class="hero__media">
    <div class="hero_background">
      {% render 'pattern-2640x350' %}
    </div>
    <div class="hero__sticker">
      <div class="semi">
        .
      </div>
      <div class="hero__content">
        <h1 class="h1 hero__tagline">
          {{ section.settings.tagline }}
        </h1>
        <div class="">
          <a
            aria-label=""
            class="button "
            href="{{section.settings.button_link}}">
            {{ section.settings.button_text }}
          </a>
        </div>
      </div>
    </div>
  </div>


</div>


{% schema %}
  {
    "name": "Hero Section",
    "tag": "section",
    "class": "hero",
    "settings": [
      {
        "type": "text",
        "id": "tagline",
        "label": "Tagline"
      },
      {
        "type": "text",
        "id": "button_text",
        "label": "Button text"
      },
      {
        "type": "url",
        "id": "button_link",
        "label": "Button link"
      }
    ],
    "blocks": [
      {
        "name": "Images",
        "type": "images",
        "settings": [
          {
            "type": "image_picker",
            "id": "image",
            "label": "Image"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Hero Section"
      }
    ]
  }
{% endschema %}
